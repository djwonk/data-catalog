- @page_title = @user.name
%section#users_show
  %h1.page_title= @page_title
  %section.details
    %dl
      %dt.avatar Avatar
      %dd.avatar= gravatar_image_tag(@user.email, @user.name)
      %dt Bio
      %dd= @user.bio
      %dt Email
      %dd= @user.email
      %dt Owned Catalogs
      %dd= user_owned_catalogs(@user)
      %dt Curated Catalogs
      %dd= user_curated_catalogs(@user)
      .clear
  %section.activities
    %ol
      - @activities.each do |activity|
        %li= activity_string(activity)
